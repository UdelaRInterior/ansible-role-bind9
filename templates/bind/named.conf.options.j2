options {
	directory "/var/cache/bind";

	// If there is a firewall between you and nameservers you want
	// to talk to, you may need to fix the firewall to allow multiple
	// ports to talk.  See http://www.kb.cert.org/vuls/id/800113

	// If your ISP provided one or more IP addresses for stable 
	// nameservers, you probably want to use them as forwarders.  
	// Uncomment the following block, and insert the addresses replacing 
	// the all-0's placeholder.

	// forwarders {
	// 	0.0.0.0;
	// };

	//========================================================================
	// If BIND logs error messages about the root key being expired,
	// you will need to update your keys.  See https://www.isc.org/bind-keys
	//========================================================================
	dnssec-validation {{ bind9_recusor|d()|ternary('auto', 'yes') }};

	auth-nxdomain no;    # conform to RFC1035
	listen-on-v6 { any; };

	recursion {{ bind9_recursor|d()|ternary('yes', 'no') }};
	allow-recursion { {{ bind9_recursor|d()|ternary('our_networks', 'none') }}; };

	allow-query { {% if bind9_hidden_master|d() %}our_neighbors{% elif bind9_authoritative|d() %}any{% else %}our_networks{% endif %}; };
{% if bind9_authoritative|d() %}

	allow-transfer { our_neighbors; };
{% endif %}
{% if bind9_slaves|d() %}

	// List of secondary nameservers to notify for every zone update
	also-notify {
{%   for slave in bind9_slaves %}
		{{ slave }};
{%   endfor %}
	};
{% endif %}
{% if bind9_notify_explicit|d() %}

	// Notify only nameservers from also-notify, not from NS RRs in zones
	notify explicit;
{% endif %}
{% if bind9_dnssec|d() %}

	// Look here for DNSSEC keys
	key-directory "/etc/bind/keys";
{% endif %}
};

{% if bind9_zones_static|selectattr('update_keyfile','defined')|list|d() %}
{%   for zone in bind9_zones_static|selectattr('update_keyfile','defined')|list|d([]) %}
{%     if zone_type|d(bind9_zone_type|d('master')) == 'master' %}
{%       if loop.first %}
// The following keys are used for dynamic DNS updates
{%       endif %}
key "{{ zone.name }}_ddns_update" {
	algorithm {{ zone.update_key_algorithm|d('hmac-sha512') }};
	secret "{{ zone.update_key_secret|d() }}";
};
{%     endif %}
{%   endfor %}
{% endif %}

acl our_networks {
	// Permitted for queries
{% if bind9_our_networks|d() %}
{%   for network in bind9_our_networks %}
	{{ network }};
{%   endfor %}
{% endif %}
};

acl our_neighbors {
	// Permitted for transfers
{% if bind9_our_neighbors|d() %}
{%   for network in bind9_our_neighbors %}
	{{ network }};
{%   endfor %}
{% endif %}
};
